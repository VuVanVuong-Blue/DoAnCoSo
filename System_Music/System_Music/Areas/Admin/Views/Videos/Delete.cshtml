@model System_Music.Models.SqlModels.Video

@{
    ViewData["Title"] = "Xóa MV";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa MV</h2>

<h3>Bạn có chắc chắn muốn xóa MV này?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.EncodeId</dd>
        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Thời lượng</dt>
        <dd class="col-sm-10">@Model.Duration giây</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EncodeId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>