@model System_Music.Models.SqlModels.Genre

@{
    ViewData["Title"] = "Genre Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mt-4">Genre Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenreId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenreId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Tracks
        </dt>
        <dd class="col-sm-10">
            @if (Model.TrackGenres != null && Model.TrackGenres.Any())
            {
                <ul>
                    @foreach (var trackGenre in Model.TrackGenres)
                    {
                        <li>@trackGenre.Track?.Title</li>
                    }
                </ul>
            }
            else
            {
                <span>No tracks in this genre.</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>