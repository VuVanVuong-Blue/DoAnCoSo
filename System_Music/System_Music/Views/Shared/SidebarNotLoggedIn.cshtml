<!-- SidebarNotLoggedIn.cshtml -->
<div class="sidebar-container">
    <!-- Header -->
    <header class="sidebar-header">
        <div class="header-content">
            <div class="library-title">
                <span>Thư viện</span>
            </div>
            <div class="header-actions">
                <button class="create-btn" onclick="toggleChatBubble()" aria-label="Tạo danh sách phát hoặc thư mục">
                    <svg data-encore-id="icon" role="img" aria-hidden="true" class="icon" viewBox="0 0 16 16">
                        <path d="M15.25 8a.75.75 0 0 1-.75.75H8.75v5.75a.75.75 0 0 1-1.5 0V8.75H1.5a.75.75 0 0 1 0-1.5h5.75V1.5a.75.75 0 0 1 1.5 0v5.75h5.75a.75.75 0 0 1 .75.75z"></path>
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Bong bóng chat -->
    <div class="chat-bubble" id="chatBubble">
        <div class="chat-bubble-content">
            <p>Log in to create and share playlists.</p>
            <div class="chat-bubble-actions">
                <button onclick="closeChatBubble()" class="chat-bubble-btn chat-bubble-btn-secondary">Not now</button>
                <a href="@Url.Page("/Account/Login", new { area = "Identity", returnUrl = "/" })" class="chat-bubble-btn chat-bubble-btn-primary">Log in</a>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="content-container">
        <!-- Gợi ý 1: Tạo danh sách phát -->
        <section class="suggestion-section">
            <div class="suggestion-text">
                <span class="suggestion-title">Tạo danh sách phát đầu tiên của bạn</span>
                <span class="suggestion-subtitle">Rất dễ! Chúng tôi sẽ giúp bạn</span>
            </div>
            <div class="suggestion-action">
                <button class="action-btn" onclick="toggleChatBubble()">Tạo danh sách phát</button>
            </div>
        </section>
        <!-- Gợi ý 2: Tìm podcast -->
        <section class="suggestion-section">
            <div class="suggestion-text">
                <span class="suggestion-title">Hãy cùng tìm và theo dõi một số podcast</span>
                <span class="suggestion-subtitle">Chúng tôi sẽ cập nhật cho bạn thông tin về các tập mới</span>
            </div>
            <div class="suggestion-action">
                <a href="/genre/podcasts-web" class="action-btn">Duyệt xem podcast</a>
            </div>
        </section>
    </div>

    <!-- Footer -->
    <div class="sidebar-footer">
        <div class="legal-links">
            <div class="legal-link"><a href="">Pháp lý</a></div>
            <div class="legal-link"><a href="">Trung tâm an toàn và quyền riêng tư</a></div>
            <div class="legal-link"><a href="">Chính sách quyền riêng tư</a></div>
            <div class="legal-link"><a href="">Cookie</a></div>
            <div class="legal-link"><a href="">Giới thiệu Quảng cáo</a></div>
            <div class="legal-link"><a href="">Hỗ trợ tiếp cận</a></div>
        </div>
        <a href="" target="_blank" rel="noopener" class="cookie-btn">Cookie</a>
        <div class="language-selector">
            <button class="language-btn">
                <svg role="img" height="16" width="16" aria-hidden="true" viewBox="0 0 16 16">
                    <path d="M8.152 16H8a8 8 0 1 1 .152 0zm-.41-14.202c-.226.273-.463.713-.677 1.323-.369 1.055-.626 2.496-.687 4.129h3.547c-.06-1.633-.318-3.074-.687-4.129-.213-.61-.45-1.05-.676-1.323-.194-.235-.326-.285-.385-.296h-.044c-.055.007-.19.052-.391.296zM4.877 7.25c.062-1.771.34-3.386.773-4.624.099-.284.208-.554.329-.806a6.507 6.507 0 0 0-4.436 5.43h3.334zm-3.334 1.5a6.507 6.507 0 0 0 4.436 5.43 7.974 7.974 0 0 1-.33-.806c-.433-1.238-.71-2.853-.772-4.624H1.543zm4.835 0c.061 1.633.318 3.074.687 4.129.214.61.451 1.05.677 1.323.202.244.336.29.391.297l.044-.001c.06-.01.19-.061.385-.296.226-.273.463-.713.676-1.323.37-1.055.626-2.496.687-4.129H6.378zm5.048 0c-.061 1.771-.339 3.386-.772 4.624-.082.235-.171.46-.268.674a6.506 6.506 0 0 0 4.071-5.298h-3.03zm3.031-1.5a6.507 6.507 0 0 0-4.071-5.298c.097.214.186.44.268.674.433 1.238.711 2.853.772 4.624h3.031z"></path>
                </svg>
                Tiếng Việt
            </button>
        </div>
    </div>

    <!-- Thanh điều chỉnh kích thước -->
    <div class="resize-bar">
        <label class="hidden-visually">
            <input type="range" min="280" max="420" step="10" value="420" class="resize-input">
        </label>
    </div>
</div>