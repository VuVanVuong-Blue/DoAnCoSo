<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewData["Title"] ?? "Trang mặc định") - Spotify Clone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #a300d3 0%, #000000 10%); /* Gradient từ hồng ở trên cùng đến đen ở dưới */
            color: white;
            min-height: 50vh; /* Đảm bảo body chiếm toàn bộ chiều cao viewport */
        }

        /* Container chính */
        .premium-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Nội dung chính */
        .premium-content {
            flex: 1;
            padding: 0px;
            background-color: transparent; /* Đặt transparent để gradient từ body hiển thị */
        }

        /* Footer styles từ footer.css */
        .footer {
            padding: 32px 16px;
            background-color: transparent; /* Đặt transparent để gradient từ body hiển thị */
            width: 100%;
            box-sizing: border-box;
        }

        .footer-container {
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 32px;
        }

        .footer-column {
            display: flex;
            flex-direction: column;
            flex: 1;
            min-width: 150px;
        }

        .footer-column-title {
            font-size: 16px;
            font-weight: 600;
            color: #FFFFFF;
            text-transform: uppercase;
            margin-bottom: 16px;
        }

        .footer-links {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .footer-link {
            font-size: 14px;
            color: #b3b3b3;
            text-decoration: none;
            transition: color 0.2s ease, text-decoration 0.2s ease;
        }

            .footer-link:hover {
                color: #FFFFFF;
                text-decoration: underline;
            }

        .social-links {
            display: flex;
            gap: 16px;
            flex-shrink: 0;
            align-items: center;
        }

        .social-link {
            background: #333333;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background 0.2s ease;
        }

            .social-link:hover {
                background: #4D4D4D;
            }

        .social-icon {
            width: 24px;
            height: 24px;
            fill: #FFFFFF;
        }

        .footer hr {
            border: none;
            border-top: 1px solid #2A2A2A;
            margin: 16px 0;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .copyright {
            font-size: 12px;
            color: #FFFFFF;
            text-align: left;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>
    <div class="premium-container">
        <!-- Thanh điều hướng trên cùng -->
        <div class="global-nav">
            @await Html.PartialAsync("_PremiumNav") <!-- Sử dụng menu mới -->
        </div>

        <!-- Nội dung chính của trang Premium -->
        <div class="premium-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <div class="footer-content">
                    <!-- Cột Công ty -->
                    <div class="footer-column">
                        <p class="footer-column-title">Công ty</p>
                        <div class="footer-links">
                            <a href="#" class="footer-link">Giới thiệu</a>
                            <a href="#" class="footer-link">Việc làm</a>
                            <a href="#" class="footer-link">For the Record</a>
                        </div>
                    </div>
                    <!-- Cột Cộng đồng -->
                    <div class="footer-column">
                        <p class="footer-column-title">Cộng đồng</p>
                        <div class="footer-links">
                            <a href="#" class="footer-link">Dành cho các Nghệ sĩ</a>
                            <a href="#" class="footer-link">Nhà phát triển</a>
                            <a href="#" class="footer-link">Quảng cáo</a>
                            <a href="#" class="footer-link">Nhà đầu tư</a>
                            <a href="#" class="footer-link">Nhà cung cấp</a>
                        </div>
                    </div>
                    <!-- Cột Liên kết hữu ích -->
                    <div class="footer-column">
                        <p class="footer-column-title">Liên kết hữu ích</p>
                        <div class="footer-links">
                            <a href="#" class="footer-link">Hỗ trợ</a>
                            <a href="#" class="footer-link">Ứng dụng Di động Miễn phí</a>
                        </div>
                    </div>
                    <!-- Cột Các gói của Spotify -->
                    <div class="footer-column">
                        <p class="footer-column-title">Các gói của Spotify</p>
                        <div class="footer-links">
